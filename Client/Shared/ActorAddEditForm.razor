<EditForm Model="Actor" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="form-group">
        @if (Actor.Photo != null && Actor.Photo != "")
        {
            <img src="@Actor.Photo" alt="Photo" style="width: 225 px; height: 300px;" />
        }
    </div>

    <div class="form-group">
        <label>First Name</label>
        <InputText @bind-Value="Actor.FirstName"></InputText>
        <ValidationMessage For="@(() => Actor.FirstName)" />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <InputText @bind-Value="Actor.LastName"></InputText>
        <ValidationMessage For="@(() => Actor.LastName)" />
    </div>

    <div class="form-group">
        <label>Birth Date</label>
        <InputDate @bind-Value="Actor.BirthDate"></InputDate>
        <ValidationMessage For="@(() => Actor.BirthDate)" />
    </div>

    <div class="form-group">
        <label>Biography</label>
        <InputTextArea @bind-Value="Actor.Bio"></InputTextArea>
        <ValidationMessage For="@(() => Actor.Bio)" />
    </div>

    <div class="form-group">
        <label>Photo (URL)</label>
        <InputText @bind-Value="Actor.Photo"></InputText>
    </div>

    <button type="submit" class="btn btn-success">
        <img src="https://www.mansarovar.com.co/app/PQRS/LibraryCSS/giphy.gif" style="width:20px; height:20px" class="@(Loading ? "" : "d-none")" />
        Save
    </button>
</EditForm>

@code{
    [Parameter]
    public ActorDto Actor { get; set; }

    [Parameter]
    public bool Loading { get; set; }

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}